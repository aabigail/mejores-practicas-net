<?xml version="1.0" encoding="utf-8" ?>
<objects xmlns="http://www.springframework.net"
         xmlns:db="http://www.springframework.net/database">

  <db:provider id="DbProvider"
      provider="MySql.Data.MySqlClient"
      connectionString="server=localhost;database=mejores_practicas_test;user=root;password=admin;port=3306;"/>

  <object id="adoTemplate" type="Spring.Data.Core.AdoTemplate, Spring.Data">
    <property name="DbProvider" ref="DbProvider"/>
  </object>

  <object id="PersonaDal" name="PersonaDal"
    type="MejoresPracticasDAL.Persona.MySql.PersonaDalMySql, MejoresPracticasDAL">
    <property name="AdoTemplate" ref="adoTemplate"/>
  </object>

  <object id="PersonaDalTest" name="PersonaDalTest"
    type="MejoresPracticasDALTest.Persona.PersonaDalTest, MejoresPracticasDALTest">
    <property name="PersonaDal" ref="PersonaDal"/>    
  </object>

</objects>